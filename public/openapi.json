{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT-to-Sheet API",
    "description": "API for logging chat conversations and financial transactions to Google Sheets",
    "version": "1.3.0"
  },
  "servers": [
    {
      "url": "https://gpt-to-sheet.onrender.com"
    }
  ],
  "paths": {
    "/api/master-log": {
      "post": {
        "summary": "Log conversation with guaranteed success",
        "description": "Logs conversation with automatic fallbacks to ensure data is saved in multiple ways (OAuth, Service Account, File, Memory, Queue)",
        "operationId": "masterLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the conversation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MasterLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Data logged via serviceAccount method",
                  "logId": "4982f46bac79b895",
                  "results": {
                    "methods": {
                      "oauth": false,
                      "serviceAccount": true,
                      "fileStorage": true,
                      "memoryStorage": true,
                      "queue": "skipped"
                    },
                    "primaryMethod": "serviceAccount",
                    "success": true
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/memory-log": {
      "post": {
        "summary": "Log to server memory",
        "description": "Stores conversation in server memory with guaranteed success",
        "operationId": "memoryLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully stored the conversation in memory",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemoryLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Data logged to server memory",
                  "logId": "4982f46bac79b895",
                  "retrievalUrl": "https://gpt-to-sheet.onrender.com/api/memory-log/4982f46bac79b895",
                  "stats": {
                    "totalLogs": 42,
                    "oldestLog": "2024-03-10T12:00:00Z",
                    "newestLog": "2024-03-10T13:00:00Z"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/chatgpt-key": {
      "get": {
        "summary": "Get direct API key",
        "description": "Returns a direct API key for simple ChatGPT integration",
        "operationId": "getChatGptKey",
        "security": [],
        "responses": {
          "200": {
            "description": "Successfully generated API key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    },
                    "expires_in": {
                      "type": "integer",
                      "example": 31536000
                    },
                    "scope": {
                      "type": "string",
                      "example": "sheets"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/finance-log": {
      "post": {
        "summary": "Log financial transaction",
        "description": "Logs financial transaction data to the Activity sheet with automatic fallbacks (Service Account, Queue)",
        "operationId": "financeLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransaction"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the transaction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FinanceLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Transaction logged via serviceAccount method",
                  "transactionId": "FIN-1234567890-abcd",
                  "results": {
                    "methods": {
                      "serviceAccount": true,
                      "queue": "skipped"
                    },
                    "primaryMethod": "serviceAccount",
                    "success": true
                  }
                }
              }
            }
          },
          "207": {
            "description": "Transaction queued for processing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FinanceLogQueuedResponse"
                },
                "example": {
                  "success": true,
                  "message": "Transaction queued for processing",
                  "transactionId": "FIN-1234567890-abcd",
                  "warning": "Direct logging failed, transaction queued for retry"
                }
              }
            }
          }
        }
      }
    },
    "/api/finance-history": {
      "get": {
        "summary": "Get financial transaction history",
        "description": "Retrieves financial transaction history using service account authentication",
        "operationId": "getFinanceHistory",
        "security": [],
        "parameters": [
          {
            "name": "spreadsheetId",
            "in": "query",
            "description": "Google Sheets spreadsheet ID (optional, defaults to service default)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transactions": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "description": "Raw spreadsheet values as a 2D array"
                    }
                  }
                },
                "example": {
                  "transactions": [
                    ["Transaction ID", "Date", "Time", "Account Name", "Transaction Type"],
                    ["FIN-1234", "2024-03-18", "14:30:00", "Maya Savings - 1442", "Expense (Spent)"]
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Error retrieving transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "Failed to retrieve finance history"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LogRequest": {
        "type": "object",
        "required": ["userMessage", "assistantResponse"],
        "properties": {
          "userMessage": {
            "type": "string",
            "description": "Message from the user"
          },
          "assistantResponse": {
            "type": "string",
            "description": "Response from the assistant"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO timestamp (optional)",
            "example": "2024-03-10T12:00:00Z"
          },
          "spreadsheetId": {
            "type": "string",
            "description": "Optional custom spreadsheet ID",
            "example": "1m6e-HTb1W_trKMKgkkM-ItcuwJJW-Ab6lM_TKmOAee4"
          },
          "sheetName": {
            "type": "string",
            "description": "Optional custom sheet name",
            "example": "Data"
          }
        }
      },
      "MasterLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          },
          "results": {
            "type": "object",
            "properties": {
              "methods": {
                "type": "object",
                "properties": {
                  "oauth": {
                    "type": "boolean"
                  },
                  "serviceAccount": {
                    "type": "boolean"
                  },
                  "fileStorage": {
                    "type": "boolean"
                  },
                  "memoryStorage": {
                    "type": "boolean"
                  },
                  "queue": {
                    "type": ["string", "boolean"]
                  }
                }
              },
              "primaryMethod": {
                "type": "string",
                "enum": ["oauth", "serviceAccount", "fileStorage", "memoryStorage", "queue"]
              },
              "success": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "MemoryLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          },
          "retrievalUrl": {
            "type": "string"
          },
          "stats": {
            "type": "object",
            "properties": {
              "totalLogs": {
                "type": "integer"
              },
              "oldestLog": {
                "type": "string",
                "format": "date-time"
              },
              "newestLog": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "FinancialTransaction": {
        "type": "object",
        "required": ["accountName", "transactionType", "category", "amount"],
        "properties": {
          "transactionId": {
            "type": "string",
            "description": "Unique identifier for each transaction (auto-generated if not provided)"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date when the transaction occurred (YYYY-MM-DD)"
          },
          "time": {
            "type": "string",
            "format": "time",
            "description": "Time of the transaction (HH:mm:ss)"
          },
          "accountName": {
            "type": "string",
            "description": "Specifies the bank or financial account involved (e.g., Maya Savings - 1442, Payroll Account)"
          },
          "transactionType": {
            "type": "string",
            "enum": [
              "Income (Salary)",
              "Expense (Spent)",
              "Interest",
              "Banking Fees",
              "Transfer (In)",
              "Transfer (Out)",
              "Cashback Rewards"
            ]
          },
          "category": {
            "type": "string",
            "enum": [
              "Groceries",
              "Dining Out",
              "Rent",
              "Utilities",
              "Transportation",
              "Subscriptions",
              "Shopping",
              "Health & Wellness",
              "Education",
              "Travel",
              "Salary & Wages",
              "Allowances",
              "Deductions",
              "Transfers",
              "Interest Earnings",
              "Banking Fees",
              "Loans",
              "Cashback Rewards",
              "Savings (Personal Goal)",
              "Miscellaneous"
            ]
          },
          "allowances": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Clothing Allowance",
                "Laundry Allowance",
                "Meal Allowance",
                "Medicine Allowance",
                "Rice Allowance"
              ]
            },
            "description": "Breakdown of payroll benefits",
            "default": []
          },
          "deductions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Pag-IBIG",
                "PhilHealth",
                "SSS",
                "SSS WISP",
                "Withholding Tax"
              ]
            },
            "description": "Breakdown of mandatory payroll deductions"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tracks specific purchases from grocery receipts, restaurant orders, or itemized expenses",
            "default": []
          },
          "establishment": {
            "type": "string",
            "description": "Name of the store, restaurant, or online retailer where the transaction occurred",
            "default": "N/A"
          },
          "receiptNumber": {
            "type": "string",
            "description": "Receipt numbers, invoices, or order IDs for tracking reimbursements and financial audits",
            "default": "N/A"
          },
          "amount": {
            "type": "number",
            "description": "The value of the transaction, negative for expenses and positive for income"
          },
          "paymentMethod": {
            "type": "string",
            "enum": [
              "Credit Card",
              "Debit Card",
              "Bank Transfer",
              "Cash",
              "GCash",
              "Maya",
              "PayPal"
            ],
            "description": "Specifies how the transaction was paid"
          },
          "cardUsed": {
            "type": "string",
            "description": "Tracks which specific card or bank account was used",
            "default": "N/A"
          },
          "linkedBudgetCategory": {
            "type": "string",
            "description": "Same as Category, will update if new ones are needed",
            "enum": [
              "Groceries",
              "Dining Out",
              "Rent",
              "Utilities",
              "Transportation",
              "Subscriptions",
              "Shopping",
              "Health & Wellness",
              "Education",
              "Travel",
              "Salary & Wages",
              "Allowances",
              "Deductions",
              "Transfers",
              "Interest Earnings",
              "Banking Fees",
              "Loans",
              "Cashback Rewards",
              "Savings (Personal Goal)",
              "Miscellaneous"
            ]
          },
          "onlineTransactionId": {
            "type": "string",
            "description": "Unique identifier for online transactions",
            "default": "N/A"
          },
          "mappedOnlineVendor": {
            "type": "string",
            "enum": [
              "Amazon",
              "Shopee",
              "PayPal",
              "Grab",
              "Lazada",
              "Uber Eats",
              "Netflix",
              "Spotify",
              "Apple",
              "Google",
              "Government Services",
              "Other"
            ]
          },
          "reimbursable": {
            "type": "boolean",
            "description": "Indicates whether the transaction is eligible for reimbursement",
            "default": false
          },
          "reimbursementStatus": {
            "type": "string",
            "enum": [
              "Pending",
              "Approved",
              "Rejected",
              "Paid"
            ]
          },
          "interestType": {
            "type": "string",
            "enum": [
              "Base Interest",
              "Boost Campaign",
              "Time Deposit Interest",
              "Personal Goal Interest"
            ]
          },
          "taxWithheld": {
            "type": "number",
            "description": "Amount of tax deducted from interest income or salary"
          },
          "taxDeductible": {
            "type": "boolean",
            "description": "Indicates whether the expense qualifies for tax deductions"
          },
          "taxCategory": {
            "type": "string",
            "enum": [
              "Business Expense",
              "Charity Donation",
              "Medical",
              "Education",
              "Government Fees",
              "Other"
            ]
          },
          "bankIdentifier": {
            "type": "string",
            "description": "Identifies the bank processing the transaction (SWIFT/BIC Code)"
          },
          "transactionMethod": {
            "type": "string",
            "enum": [
              "InstaPay",
              "Bank Transfer",
              "GCash",
              "PayPal",
              "Credit Card Payment",
              "Debit Card Payment",
              "Direct Deposit",
              "Wallet Transfer"
            ]
          },
          "transferMethod": {
            "type": "string",
            "enum": [
              "InstaPay",
              "PESONet",
              "Maya Wallet"
            ],
            "description": "If the transaction is a transfer, specifies the type"
          },
          "referenceId": {
            "type": "string",
            "description": "The unique identifier provided by the bank or payment system"
          },
          "notes": {
            "type": "string",
            "description": "Any additional details about the transaction"
          },
          "processed": {
            "type": "boolean",
            "description": "Indicates whether the transaction has been logged correctly",
            "default": false
          }
        }
      },
      "FinanceLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          },
          "results": {
            "type": "object",
            "properties": {
              "methods": {
                "type": "object",
                "properties": {
                  "serviceAccount": {
                    "type": "boolean"
                  },
                  "queue": {
                    "type": ["string", "boolean"]
                  }
                }
              },
              "primaryMethod": {
                "type": "string",
                "enum": ["serviceAccount", "queue"]
              },
              "success": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "FinanceLogQueuedResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "warning": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          }
        }
      }
    }
  }
} 