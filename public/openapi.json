{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT-to-Sheet API",
    "description": "API for logging chat conversations and financial transactions to Google Sheets",
    "version": "1.3.0"
  },
  "servers": [
    {
      "url": "https://gpt-to-sheet.onrender.com"
    }
  ],
  "paths": {
    "/api/master-log": {
      "post": {
        "summary": "Log conversation with guaranteed success",
        "description": "Logs conversation with automatic fallbacks to ensure data is saved in multiple ways (OAuth, Service Account, File, Memory, Queue)",
        "operationId": "masterLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the conversation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MasterLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Data logged via serviceAccount method",
                  "logId": "4982f46bac79b895",
                  "results": {
                    "methods": {
                      "oauth": false,
                      "serviceAccount": true,
                      "fileStorage": true,
                      "memoryStorage": true,
                      "queue": "skipped"
                    },
                    "primaryMethod": "serviceAccount",
                    "success": true
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/memory-log": {
      "post": {
        "summary": "Log to server memory",
        "description": "Stores conversation in server memory with guaranteed success",
        "operationId": "memoryLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully stored the conversation in memory",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemoryLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Data logged to server memory",
                  "logId": "4982f46bac79b895",
                  "retrievalUrl": "https://gpt-to-sheet.onrender.com/api/memory-log/4982f46bac79b895",
                  "stats": {
                    "totalLogs": 42,
                    "oldestLog": "2024-03-10T12:00:00Z",
                    "newestLog": "2024-03-10T13:00:00Z"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/chatgpt-key": {
      "get": {
        "summary": "Get direct API key",
        "description": "Returns a direct API key for simple ChatGPT integration",
        "operationId": "getChatGptKey",
        "security": [],
        "responses": {
          "200": {
            "description": "Successfully generated API key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    },
                    "expires_in": {
                      "type": "integer",
                      "example": 31536000
                    },
                    "scope": {
                      "type": "string",
                      "example": "sheets"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/finance-log": {
      "post": {
        "summary": "Log financial transaction",
        "description": "Logs financial transaction data to the Activity sheet with automatic fallbacks (Service Account, Queue)",
        "operationId": "financeLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransaction"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the transaction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FinanceLogResponse"
                },
                "example": {
                  "success": true,
                  "message": "Transaction logged via serviceAccount method",
                  "transactionId": "FIN-1234567890-abcd",
                  "results": {
                    "methods": {
                      "serviceAccount": true,
                      "queue": "skipped"
                    },
                    "primaryMethod": "serviceAccount",
                    "success": true
                  }
                }
              }
            }
          },
          "207": {
            "description": "Transaction queued for processing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FinanceLogQueuedResponse"
                },
                "example": {
                  "success": true,
                  "message": "Transaction queued for processing",
                  "transactionId": "FIN-1234567890-abcd",
                  "warning": "Direct logging failed, transaction queued for retry"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LogRequest": {
        "type": "object",
        "required": ["userMessage", "assistantResponse"],
        "properties": {
          "userMessage": {
            "type": "string",
            "description": "Message from the user"
          },
          "assistantResponse": {
            "type": "string",
            "description": "Response from the assistant"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO timestamp (optional)",
            "example": "2024-03-10T12:00:00Z"
          },
          "spreadsheetId": {
            "type": "string",
            "description": "Optional custom spreadsheet ID",
            "example": "1m6e-HTb1W_trKMKgkkM-ItcuwJJW-Ab6lM_TKmOAee4"
          },
          "sheetName": {
            "type": "string",
            "description": "Optional custom sheet name",
            "example": "Data"
          }
        }
      },
      "MasterLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          },
          "results": {
            "type": "object",
            "properties": {
              "methods": {
                "type": "object",
                "properties": {
                  "oauth": {
                    "type": "boolean"
                  },
                  "serviceAccount": {
                    "type": "boolean"
                  },
                  "fileStorage": {
                    "type": "boolean"
                  },
                  "memoryStorage": {
                    "type": "boolean"
                  },
                  "queue": {
                    "type": ["string", "boolean"]
                  }
                }
              },
              "primaryMethod": {
                "type": "string",
                "enum": ["oauth", "serviceAccount", "fileStorage", "memoryStorage", "queue"]
              },
              "success": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "MemoryLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          },
          "retrievalUrl": {
            "type": "string"
          },
          "stats": {
            "type": "object",
            "properties": {
              "totalLogs": {
                "type": "integer"
              },
              "oldestLog": {
                "type": "string",
                "format": "date-time"
              },
              "newestLog": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "FinancialTransaction": {
        "type": "object",
        "required": ["accountName", "transactionType", "category", "amount"],
        "properties": {
          "transactionId": {
            "type": "string",
            "description": "Unique identifier for the transaction (auto-generated if not provided)"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Transaction date (YYYY-MM-DD)"
          },
          "time": {
            "type": "string",
            "format": "time",
            "description": "Transaction time (HH:mm:ss)"
          },
          "accountName": {
            "type": "string",
            "description": "Name of the account"
          },
          "transactionType": {
            "type": "string",
            "enum": ["Expense (Spent)", "Income (Salary)", "Income (Other)", "Transfer (In)", "Transfer (Out)"]
          },
          "category": {
            "type": "string",
            "description": "Transaction category"
          },
          "amount": {
            "type": "number",
            "description": "Transaction amount (negative for expenses)"
          },
          "establishment": {
            "type": "string",
            "description": "Where the transaction occurred"
          },
          "paymentMethod": {
            "type": "string",
            "description": "Method of payment"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of items purchased"
          },
          "allowances": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of allowances (for salary)"
          },
          "deductions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of deductions (for salary)"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes about the transaction"
          }
        }
      },
      "FinanceLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          },
          "results": {
            "type": "object",
            "properties": {
              "methods": {
                "type": "object",
                "properties": {
                  "serviceAccount": {
                    "type": "boolean"
                  },
                  "queue": {
                    "type": ["string", "boolean"]
                  }
                }
              },
              "primaryMethod": {
                "type": "string",
                "enum": ["serviceAccount", "queue"]
              },
              "success": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "FinanceLogQueuedResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "warning": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          }
        }
      }
    }
  }
} 