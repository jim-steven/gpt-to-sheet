{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT-to-Sheet API",
    "description": "API for logging chat conversations and financial transactions to Google Sheets",
    "version": "1.3.0"
  },
  "servers": [
    {
      "url": "https://gpt-to-sheet.onrender.com"
    }
  ],
  "paths": {
    "/api/master-log": {
      "post": {
        "summary": "Log conversation with guaranteed success",
        "description": "Logs conversation with automatic fallbacks to ensure data is saved",
        "operationId": "masterLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the conversation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MasterLogResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/memory-log": {
      "post": {
        "summary": "Log to server memory",
        "description": "Stores conversation in server memory with guaranteed success",
        "operationId": "memoryLog",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully stored the conversation in memory",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemoryLogResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/chatgpt-key": {
      "get": {
        "summary": "Get a simplified API key",
        "description": "Returns an API key for simple authentication",
        "operationId": "getChatGptKey",
        "security": [],
        "responses": {
          "200": {
            "description": "Successfully generated API key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string"
                    },
                    "expires_in": {
                      "type": "integer"
                    },
                    "scope": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/finance-log": {
      "post": {
        "summary": "Log financial transaction",
        "description": "Logs financial transaction data to the Activity sheet",
        "operationId": "logFinancialTransaction",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransaction"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged the transaction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FinanceLogResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LogRequest": {
        "type": "object",
        "required": ["userMessage", "assistantResponse"],
        "properties": {
          "userMessage": {
            "type": "string",
            "description": "Message from the user"
          },
          "assistantResponse": {
            "type": "string",
            "description": "Response from the assistant"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO timestamp (optional)"
          }
        }
      },
      "MasterLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          }
        }
      },
      "MemoryLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "logId": {
            "type": "string"
          }
        }
      },
      "FinancialTransaction": {
        "type": "object",
        "required": ["accountName", "transactionType", "category", "amount"],
        "properties": {
          "transactionId": {
            "type": "string",
            "description": "Unique identifier for the transaction"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Transaction date"
          },
          // ... add all other properties ...
        }
      },
      "FinanceLogResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "transactionId": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "spreadsheetId": {
                "type": "string"
              },
              "sheetName": {
                "type": "string"
              },
              "rowData": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "chatgptOAuth": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://gpt-to-sheet.onrender.com/auth/chatgpt-oauth",
            "tokenUrl": "https://gpt-to-sheet.onrender.com/auth/token",
            "scopes": {}
          }
        }
      }
    }
  }
} 